<odoo>
    <data>

        <!-- product search view aaaaaaaaaaaa-->

        <record id="frusec_product_view_search" model="ir.ui.view">
            <field name="name">frusec.product.search</field>
            <field name="model">frusec.product</field>
            <field name="arch" type="xml">
                <search string="Products">
                    <field name="name" />
                    <field name="price" />
                    <field name="note" />
                    <separator />
                    <group expand="1" string="Group By">
                        <filter name="price" string="Price" context="{'group_by': 'price'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- product kanban view -->
        <record id="frusec_order_view_kanban" model="ir.ui.view">
            <field name="name">
                frusec.order.kanban</field>
            <field name="model">frusec.order</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="product_action_window">
            <field name="name">Product
                List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">frusec.product</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new product!
                </p>
            </field>
        </record>

        <!-- menu categories -->

        <menuitem name="Products" id="frusec_products" parent="frusec_root" sequence="20"
            action="product_action_window" />

    </data>
</odoo>