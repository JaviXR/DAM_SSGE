    <!-- Top menu item -->

    <menuitem name="Frusec" id="frusec.menu_root" sequence="450"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="frusec.menu_1" parent="frusec.menu_root" sequence="10"/>
    <menuitem name="Menu 2" id="frusec.menu_2" parent="frusec.menu_root" sequence="10" />

    <!-- actions -->

    <menuitem name="List" id="frusec.menu_1_list" parent="frusec.menu_1"
              action="frusec.action_window"/>
    <menuitem name="List 2" id="frusec.menu_2_list" parent="frusec.menu_2"
              action="frusec.action_window"/>

  </data>
</odoo>