<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="frusec.list">
      <field name="name">frusec.vista_list</field>
      <field name="model">frusec</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="frusec.action_window">
      <field name="name">main window</field>
      <field name="res_model">frusec</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
